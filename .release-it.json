{
  "git": {
    "requireCleanWorkingDir": true,
    "commitMessage": "Release: ${version}",
    "tagAnnotation": "Release: ${version}",
    "tagName": "v${version}",
    "requireCommits": true,
    "requireCommitsFail": false
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true,
    "skipChecks": true
  }
}
